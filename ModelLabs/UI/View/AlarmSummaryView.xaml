						</Style>
					</DataGridTextColumn.CellStyle>-->
				</DataGridTextColumn>

				<DataGridTextColumn Header="Message" Binding="{Binding AlarmMessage}" Width="*" IsReadOnly="True"/>
				<DataGridTemplateColumn Header="Acknowledge" Width="Auto">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" 
									  IsChecked="{Binding AckState,Converter={StaticResource AckStateToBoolConverter}}"
									  Command="{Binding DataContext.AcknowledgeCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
									   CommandParameter="{Binding}" >
							</CheckBox>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>

		</DataGrid>

		<Button x:Name="buttonHide" Content="Hide" HorizontalAlignment="Left" Height="22" Margin="6,3,0,0" VerticalAlignment="Top" Width="59" Click="ButtonHide_Click"/>
			
		
		<Button x:Name="buttonAType" Content="Search" HorizontalAlignment="Left" Height="22" Margin="135,3,0,0" VerticalAlignment="Top" Width="57" Click="ButtonAType_Click"/>
		<TextBox x:Name="SeveritySearch" HorizontalAlignment="Left" Height="22" Margin="70,3,0,0" TextWrapping="Wrap" Text="Severity..." VerticalAlignment="Top" Width="60"/>

                                    <EasingColorKeyFrame KeyTime="00:00:01" 
                                                         Value="Orange" />
                                </ColorAnimationUsingKeyFrames>
                                <ColorAnimationUsingKeyFrames 
                                    BeginTime="00:00:00"
